{
    "GET /api": {
        "description": "serves up a json representation of all the available endpoints of the api"
    },
    "GET /api/topics": {
        "description": "serves an array of all topics.",
        "queries": [],
        "exampleResponse": {
            "topics": [{ "slug": "football", "description": "Footie!" }]
        }
    },
    "GET /api/articles": {
        "description": "serves an array of all articles. Queries can be used to sort by columns in either ascending or descending order. Can also filter by topic",
        "queries": ["sort_by", "order", "topic"],
        "exampleResponse": {
            "articles": [
                {
                    "title": "Seafood substitutions are increasing",
                    "topic": "cooking",
                    "author": "weegembump",
                    "created_at": "2018-05-30T15:59:13.341Z",
                    "votes": 0,
                    "comment_count": 6
                }
            ]
        }
    },
    "GET /api/users": {
        "description": "serves an array of all users",
        "exampleResponse": {
            "users": [
                {
                    "username": "jessjelly",
                    "name": "Jess Jelly",
                    "avatar_url": "https://www.example.com/jess-avatar.png"
                }
            ]
        }
    },

    "GET /api/articles/:article_id": {
        "description": "serves an article object by its ID",
        "exampleResponse": {
            "article": {
                "article_id": 1,
                "title": "Article title...",
                "author": "author_name",
                "body": "Full article body here...",
                "votes": 100,
                "created_at": "2020-01-01T00:00:00.000Z"
            }
        }
    },

    "GET /api/articles/:article_id/comments": {
        "description": "serves an array of all comments by an article of specified ID",
        "exampleResponse": {
            "comments": [
                {
                    "comment_id": 1,
                    "votes": 16,
                    "created_at": "2020-04-06T12:17:00.000Z",
                    "author": "butter_bridge",
                    "body": "Great article!"
                },
                {
                    "comment_id": 2,
                    "votes": 4,
                    "created_at": "2020-03-06T12:17:00.000Z",
                    "author": "icellusedkars",
                    "body": "Thanks for sharing!"
                }
            ]
        }
    },
    "POST /api/articles/:article_id/comments": {
        "description": "Adds a new comment to the specified article.",
        "requestBody": {
            "username": "lurker",
            "body": "This is a great article!"
        },
        "exampleResponse": {
            "comment": {
                "comment_id": 19,
                "author": "lurker",
                "article_id": 3,
                "body": "This is a great article!",
                "votes": 0,
                "created_at": "2025-06-05T12:00:00.000Z"
            }
        }
    },
    "Patch /api/articles/:article_id": {
        "description": "Increments the vote count to the specified number",
        "requestBody": { "inc_vote": "1" },
        "exampleResponse": {
            "article": {
                "article_id": 1,
                "title": "Article title...",
                "author": "author_name",
                "body": "Full article body here...",
                "votes": 1,
                "created_at": "2020-01-01T00:00:00.000Z"
            }
        }
    },
    "DELETE /api/comments/:comment_id": {
        "description": "Deletes a comment with given comment_id.",
        "exampleResponse": {}
    }
}
